conky.config = {
-- -- Conky settings -- #
	background = true,
	update_interval = 1,

	cpu_avg_samples = 2,
	net_avg_samples = 2,

	override_utf8_locale = true,

	double_buffer = true,
	no_buffers = true,

	text_buffer_size = 32768,
	imlib_cache_size = 0,

-- -- Window specifications -- #
	own_window = true,
	own_window_type = 'normal',
	own_window_transparent = true,
	own_window_argb_visual = true,
	own_window_argb_value = 90,
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	own_window_colour = '#000000',

	minimum_width = 310,
	minimum_height = 1070,


	border_inner_margin = 10,
	border_outer_margin = 0,
	alignment = 'top_right',
--	gap_x = 50,
	gap_y = 0,

-- -- Graphics settings -- #
	draw_shades = false,
	draw_outline = false,
	draw_borders = false,
	draw_graph_borders = false,

	-- Conky on second monitor
	xinerama_head = 2,

-- -- Text settings -- #
-- √çcones: ${font Conky Icons by Carelli:size=14}
	use_xft = true,
	font = 'Ubuntu Fancy:size=12',
	xftalpha = 0.8,
	uppercase = false,
	default_color = '#FFFFFF',
	color1 = '090909',
	color2 = '000000',
--	format_human_readable = true,
};

